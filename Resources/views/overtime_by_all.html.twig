{% extends '@Approval/layout.html.twig' %}
{% import "macros/widgets.html.twig" as widgets %}

{% block report_title %}{{ report_title|trans({}, 'ApprovalBundle') }}{% endblock %}


{% block report %}
    {% block nav_row %}
        <div class="nav_row" style="float:left;width: 100%;">
            {% block nav_form %}
                {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                {{ form_widget(form.date) }}
                {{ form_end(form) }}
            {% endblock %}
            <br/>
        </div>
    {% endblock %}

    {% block table %}
        <div id="history">
            <table class="table table-bordered dataTable">
            <thead>
                <tr>
                    <th class="text-center">{{ 'table.approve_user'|trans }}</th>
                    <th class="text-center">{{ 'header.end'|trans}}</th>
                    <th class="text-center">{{ 'label.yearly_overtime'|trans}}</th>
                    <th class="text-center">{{ 'label.yearly_overtime'|trans}} {{selectedDate}}</th>
                </tr>
            </thead>
            <tbody>
                {% for entry in weeklyEntries %}
                    <tr>
                        <td class="text-center">{{ entry.user }}</td>
                        <td class="text-center">{{ entry.endDate }}</td>
                        <td class="text-center {% if entry.overtime.overtime < 0 %} redText{% endif %}">{{ entry.overtime.overtime | duration }}</td>
                        <td class="text-center {% if entry.overtimeDate.overtime < 0 %} redText{% endif %}">{{ entry.overtimeDate.overtime | duration }}</td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    {% endblock %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
      document.addEventListener("kimai.initialized", function () {
          {% if form.date is defined %}            
              jQuery('#{{form.date.vars.id}}').on("change", function (ev) {
              jQuery(this).closest("form").submit();
            });
          {% endif %}
      });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .redText {
            color: red;
        }
    </style>
{% endblock %}